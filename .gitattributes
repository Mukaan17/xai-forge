# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for text files
*.java text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Force CRLF line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.class binary
*.so binary
*.dll binary
*.exe binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Merge strategies
*.java merge=union
*.js merge=union
*.jsx merge=union
*.ts merge=union
*.tsx merge=union
*.json merge=union
*.md merge=union
*.yml merge=union
*.yaml merge=union
*.properties merge=union
*.xml merge=union
*.html merge=union
*.css merge=union
*.scss merge=union

# Ignore whitespace changes for these files
*.java -diff
*.js -diff
*.jsx -diff
*.ts -diff
*.tsx -diff
